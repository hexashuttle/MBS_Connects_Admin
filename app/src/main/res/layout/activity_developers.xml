<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:background="@color/bg_color"
    tools:context=".about_dev.developers"
     android:paddingTop="30dp"
    android:scrollbarSize="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About\nDevelopers"
            android:textAllCaps="true"
            android:textSize="35sp"
            android:fontFamily="@font/archivo_black"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_Color"
            ></TextView>


        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/utk"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utkarsh Raj Mishra"
                android:textSize="20sp"
                android:textColor="@color/text_Color"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/text_Color"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                ></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/shashank"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shashank Mishra"
                    android:textSize="20sp"
                    android:textColor="@color/text_Color"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tester"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_Color"
                    android:layout_marginTop="4dp"
                    ></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/raj"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raj Shrinet"
                    android:textSize="20sp"
                    android:textColor="@color/text_Color"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UI Designer"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_Color"
                    android:layout_marginTop="4dp"
                    ></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/vaishnavi"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaishnavi Jaiswal"
                    android:textSize="20sp"
                    android:textColor="@color/text_Color"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UI Designer"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_Color"
                    android:layout_marginTop="4dp"
                    ></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="60dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sakshi"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sakshi Srivastava"
                    android:textSize="20sp"
                    android:textColor="@color/text_Color"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tester"

                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_Color"
                    android:layout_marginTop="4dp"
                    ></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>


</ScrollView>