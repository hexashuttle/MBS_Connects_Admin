<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fees.fee_option"
    android:paddingRight="30dp"
    android:paddingLeft="30dp">
    <LinearLayout

        android:layout_marginTop="-60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/archivo_black"
            android:text="Update \nCourse Fee"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/text_Color"
            android:textSize="36sp" />

        <TextView
            android:layout_marginTop="30dp"

            android:textSize="18sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose any of the below option according to your need"
            ></TextView>
        <RadioGroup
            android:id="@+id/fee_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <RadioButton
                android:id="@+id/year_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year-Wise"
                ></RadioButton>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Installment-Wise"
                ></RadioButton>

        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Next"
            android:backgroundTint="#2897FF"
            android:layout_marginTop="10dp"
            android:onClick="final_fee"
            android:layout_marginBottom="60dp"
            ></Button>


    </LinearLayout>


</ScrollView>